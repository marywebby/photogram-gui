<h1>List of photos</h1>

<form action="/insert_photo">

  <label for="photo_image">Image</label>
  <input id="photo_image" type="text" name="photo_image" placeholder="Enter a URL for the image">

  <label for="photo_caption">Caption</label>
  <textarea id="photo_caption" type="text" name="photo_caption" placeholder="Enter a caption for the photo..."></textarea>

  <label for="photo_user_id">Owner ID</label>
  <input id="photo_user_id" type="text" name="photo_user_id" placeholder="Enter an ID of a User">

  <button>
    Add photo
  </button>
  
</form>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th>See details</th>
  </tr>
  

<% @list_of_photos.each do |a_photo| %>
  <tr>
    <td>
      <img src="<%= a_photo.image %>" alt="photo image not avaliable">
    </td>
    <td> <%= a_photo.caption %> </td>
    <td> <%= a_photo.poster.username %> </td>
    <td> <%= a_photo.created_at %> </td>
    <td> 
      <a href="/photos/<%= a_photo.id %>">Show details</a>
    </td>
  </tr>
<% end %>

</table>
